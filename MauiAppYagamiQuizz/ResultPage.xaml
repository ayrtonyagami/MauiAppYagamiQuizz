                    TextColor="White" 
                    FontSize="24" 
                    WidthRequest="50" 
                    HeightRequest="50" 
                    HorizontalOptions="End"
                    Clicked="OnCloseClicked" />

            <!-- Result Card -->
            <Frame BackgroundColor="#E8F4FD" 
                   CornerRadius="20" 
                   Padding="30" 
                   HasShadow="True"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                <StackLayout Spacing="20" HorizontalOptions="Center">

                    <!-- Trophy Icon -->
