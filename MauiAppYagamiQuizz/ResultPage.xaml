                           TextColor="#2C3E50" 
                           HorizontalOptions="Center" />

                    <!-- Score -->
                    <Label x:Name="ScoreLabel"
                           Text="90% Score" 
                           FontSize="32" 
                           FontAttributes="Bold" 
                           TextColor="#27AE60" 
                           HorizontalOptions="Center" />

                    <!-- Completion Message -->
                    <Label Text="Quiz completed successfully." 
                           FontSize="16" 
                           TextColor="#7F8C8D" 
                           HorizontalOptions="Center" />

                    <!-- Statistics -->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="5">
                        <Label Text="You attempt" 
                               FontSize="14" 
                               TextColor="#7F8C8D" />
                        <Label x:Name="QuestionsAttemptedLabel"
                               Text="60 questions" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               TextColor="#3498DB" />
