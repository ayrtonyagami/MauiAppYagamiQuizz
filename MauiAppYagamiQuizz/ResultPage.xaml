                                       VerticalOptions="Center" />
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnWhatsAppShare" />
                                </Frame.GestureRecognizers>
                            </Frame>

                        </StackLayout>
                    </StackLayout>

                </StackLayout>
            </Frame>

        </StackLayout>
