<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppYagamiQuizz.ImportPage"
             Title="ImportPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Cole o JSON abaixo:" FontSize="Medium" />
            <Editor x:Name="JsonEditor" HeightRequest="300" AutoSize="TextChanges" />
            <Button Text="Importar e Salvar" Clicked="OnImportClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>